pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                // GitHub'dan kodu çek
                git url: 'https://github.com/tarikuslu/JenkinsAssignment.git', branch: 'main'
            }
        }
        stage('OS Check') {
            steps {
                sh 'uname -a'
                sh 'cat /etc/os-release || echo "os-release dosyası yok"'
                sh 'which python3 || echo "python3 bulunamadı"'
                sh 'which pip3 || echo "pip3 bulunamadı"'
            }
        }

        stage('Setup') {
            steps {
                sh 'pip3 install selenium'
                sh 'yum install -y chromium chromedriver'
            }
        }
        stage('Test') {
            steps {
                sh 'python3 src/selenium_test.py'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying to production... (Bu örnekte sadece mesaj)'
            }
        }

    }
    post {
        always {
            echo 'Pipeline tamamlandı!'
        }
        success {
            echo 'Başarıyla tamamlandı!'
        }
        failure {
            echo 'Bir hata oluştu!'
        }
    }
}
